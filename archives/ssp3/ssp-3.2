sub check_runlevel {
    if ( $os eq 'linux' ) {
        my $runlevel;
        my $who_r = Cpanel::SafeRun::Errors::saferunnoerror( 'who', '-r' );

        # CentOS 5.7, 5.8:
        #         run-level 3  2012-01-25 10:38                   last=S
        if ( $who_r =~ m{ \A \s+ run-level \s (\d) }xms ) {
            $runlevel = $1;
        }

        if ( $runlevel && $runlevel != '3' ) {
            print_warn( 'Runlevel: ' );
            print_warning(  "runlevel is not 3 (current runlevel: $runlevel)" );
        }
    }    
}

