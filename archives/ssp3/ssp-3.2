            chomp;

            # http://en.wikipedia.org/wiki/Sandy_Bridge#Server_platform
            if ( /^model name/ && /Xeon/ && m{    46(\d{2})
                                                | 12(2|6)0L
                                                | 24(3|5)0L
                                                | 26(3|5)0L
